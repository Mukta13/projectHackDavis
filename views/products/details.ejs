<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
        <%=book.bookTitle%> details
        
    </title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap');

        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        :root {
            --tenne-tawny: #003c00;
            --tenne-tawny-dark: #3b7f2c;
        }


        body {
            font-weight: 300;
            font-size: 1.05rem;
            line-height: 1.6;
            font-family: 'Poppins', sans-serif;
            color: var(--tenne-tawny);
        }

        /*  */
        .btn {
            font-family: inherit;
            cursor: pointer;
            outline: 0;
            font-size: 1.05rem;
        }

        .text {
            opacity: 0.8;
        }

        .title {
            color: var(--tenne-tawny);
            font-size: 15rem;
            margin-bottom: 1rem;
        }

        /*  */
        .container {
            min-height: 100vh;
        }

        .book-wrapper {
            max-width: 1280px;
            margin: 0 auto;
            padding: 2rem;
            background: #fff;
            text-align: center;
        }

        .book-search {
            margin: 2rem 0;
        }

        .book-search cite {
            font-size: 1rem;
        }

        .book-search-box {
            margin: 1.2rem 0;
            display: flex;
            align-items: stretch;
        }

        .search-control,
        .search-btn {
            width: 100%;
        }

        .search-control {
            padding: 0 1rem;
            font-size: 1.1rem;
            font-family: inherit;
            outline: 0;
            border: 1px solid var(--tenne-tawny);
            color: var(--tenne-tawny);
            border-top-left-radius: 2rem;
            border-bottom-left-radius: 2rem;
        }

        .search-control::placeholder {
            color: var(--tenne-tawny);
        }

        .search-btn {
            width: 55px;
            height: 55px;
            font-size: 1.8rem;
            background: var(--tenne-tawny);
            color: #fff;
            border: none;
            margin-right: 1px;
            transition: all 0.4s linear;
            -webkit-transition: all 0.4s linear;
            -moz-transition: all 0.4s linear;
            -ms-transition: all 0.4s linear;
            -o-transition: all 0.4s linear;
        }

        .search-camera-btn {
            width: 55px;
            height: 55px;
            font-size: 1.8rem;
            background: var(--tenne-tawny);
            color: #fff;
            border: none;
            border-top-right-radius: 2rem;
            border-bottom-right-radius: 2rem;
            transition: all 0.4s linear;
            -webkit-transition: all 0.4s linear;
            -moz-transition: all 0.4s linear;
            -ms-transition: all 0.4s linear;
            -o-transition: all 0.4s linear;
        }

        

        .search-btn:hover {
            background: var(--tenne-tawny-dark);
        }

        .book-result {
            margin-top: 4rem;
            /*display: none;*/
        }

        #book {
            margin: 2.4rem 0;
        }

        .book-item {
            border-radius: 1rem;
            -webkit-border-radius: 1rem;
            -moz-border-radius: 1rem;
            -ms-border-radius: 1rem;
            -o-border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 4px 21px -12px rgba(0, 0, 0, 0.79);
            /* margin: 2rem 0; */
            margin-left: 20%;
            margin-right: 20%;
        }

        .book-img img {
            width: 100%;
            display: block;
        }

        .book-name {
            padding: .5rem 0.5rem;
        }

        .book-name h3 {
            font-size: 1.4rem;
        }

        .recipe-btn {
            text-decoration: none;
            color: #fff;
            background: var(--tenne-tawny);
            font-weight: 500;
            font-size: 1.1rem;
            padding: 0.75rem 0;
            display: block;
            width: 175px;
            margin: 1rem auto;
            border-radius: 2rem;
            -webkit-border-radius: 2rem;
            -moz-border-radius: 2rem;
            -ms-border-radius: 2rem;
            -o-border-radius: 2rem;
            transition: all 0.4s linear;
            -webkit-transition: all 0.4s linear;
            -moz-transition: all 0.4s linear;
            -ms-transition: all 0.4s linear;
            -o-transition: all 0.4s linear;
        }

        .nameinfo,
        .phoneinfo{
            padding: 0 1rem;
            font-size: 1.1rem;
            font-family: inherit;
            outline: 0;
            border: 1px solid var(--tenne-tawny);
            color: var(--tenne-tawny);
        }

        .phoneinfo,
        .nameinfo,
        .label,
        .phoneinfo::placeholder,
        .nameinfo::placeholder{
            color: var(--tenne-tawny-dark);
        }

        .recipe-btn:hover {
            background: var(--tenne-tawny-dark);
        }


        .book-details {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -webkit-transform: translate(-50%, -50%);
            -moz-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            -o-transform: translate(-50%, -50%);
            color: #fff;
            background: var(--tenne-tawny);
            border-radius: 1rem;
            -webkit-border-radius: 1rem;
            -moz-border-radius: 1rem;
            -ms-border-radius: 1rem;
            -o-border-radius: 1rem;
            width: 90%;
            height: 90%;
            overflow-y: scroll;
            display: none;
            padding: 2rem 0;
        }

        .book-details::-webkit-scrollbar {
            width: 10px;
        }

        .book-details::-webkit-scrollbar-thumb {
            background: #f0f0f0;
            border-radius: 2rem;
            -webkit-border-radius: 2rem;
            -moz-border-radius: 2rem;
            -ms-border-radius: 2rem;
            -o-border-radius: 2rem;
        }


        /* js related */
        .showRecipe {
            display: block;
        }

        .book-details-content {
            margin: 2rem;
        }

        .book-details-content p:not(.recipe-category) {
            padding: 1rem 0;
        }

        .recipe-close-btn {
            position: absolute;
            right: 2rem;
            top: 2rem;
            font-size: 1.8rem;
            background: #fff;
            border: none;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            -ms-border-radius: 50%;
            -o-border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0.9;
        }

        .recipe-title {
            letter-spacing: 1px;
            padding-bottom: 1rem;
        }

        .recipe-category {
            background: #fff;
            font-weight: 600;
            color: var(--tenne-tawny);
            display: inline-block;
            padding: 0.2rem 0.5rem;
            border-radius: 0.3rem;
            -webkit-border-radius: 0.3rem;
            -moz-border-radius: 0.3rem;
            -ms-border-radius: 0.3rem;
            -o-border-radius: 0.3rem;
        }

        .recipe-category {
            background: #fff;
            font-weight: 600;
            color: var(--tenne-tawny);
            display: inline-block;
            padding: 0.2rem 0.5rem;
            border-radius: 0.3rem;
            -webkit-border-radius: 0.3rem;
            -moz-border-radius: 0.3rem;
            -ms-border-radius: 0.3rem;
            -o-border-radius: 0.3rem;
        }

        .recipe-instruct {
            padding: 1rem 0;
        }

        .recipe-book-img img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            -ms-border-radius: 50%;
            -o-border-radius: 50%;
            margin: 0 auto;
            display: block;
        }

        .recipe-link {
            margin: 1.4rem 0;
        }

        .recipe-link a {
            color: #fff;
            font-size: 1.2rem;
            font-weight: 700;
            transition: all 0.4s linear;
            -webkit-transition: all 0.4s linear;
            -moz-transition: all 0.4s linear;
            -ms-transition: all 0.4s linear;
            -o-transition: all 0.4s linear;
        }

        .recipe-link a:hover {
            opacity: 0.8;
        }


        /*  */
        .notFound {
            grid-template-columns: 1fr !important;
            color: var(--tenne-tawny);
            font-size: 1.8rem;
            font-weight: 600;
            width: 100%;
        }

        

        /* Media Queries */
        @media screen and (min-width: 600px) {
            .book-search-box {
                width: 540px;
                margin-left: auto;
                margin-right: auto;
            }
        }

        @media screen and (min-width: 768px) {
            #book {
                width: 540px;
                margin-left: auto;
                margin-right: auto;
            }

            .book-item {
                margin: 0;
            }

            .book-details {
                width: 700px;
            }
        }

        @media screen and (min-width: 992px) {
            #book {
                width: 540px;
                margin-left: auto;
                margin-right: auto;
            }
        }

        .Check-out{
            color: var(--tenne-tawny);
        }
    </style>
</head>

<body>


    <div class="book-item" data-id="caterpillar"
        style="display: flex; justify-content: center; align-items: center; flex-direction: column;">

        <div class="book-name">
            <h3 class="title" style="font-size:45px;">
                <%=book.bookTitle%>
            </h3>
        </div>

        <div class ="book-div" 
            style="display: flex; justify-content: center; align-items: center; flex-direction: row; width: 60%, padding-bottom:10px">
            <div class = "book-img-container"
                style="display: flex; justify-content: center; align-items: center; flex-direction: row; flex: 1; padding-right: 10px;">
                <div class="book-img" style="">
                    <img src="<%=book.image%>" style="width:100%; height:100%;">
                </div>
            </div>

            <div class=" book-information-container"
                style="display: flex; justify-content: center; align-items: left; flex-direction: column; flex:1">
                <p><span style="font-weight:bold;">ISBN:</span>
                    <%=book.isbn%>
                </p>
                <p><span style="font-weight:bold;">Author: </span>
                    <%=book.bookAuthor%>
                </p>
                <p><span style="font-weight:bold;">Oversize: </span>
                    <%=book.oversize%>
                </p>
                <p><span style="font-weight:bold;">Condition: </span>
                    <%=book.condition%>
                </p>
                <p><span style="font-weight:bold;">Need Replacement: </span>
                    <%=book.needReplacement%>
                </p>
                <p><span style="font-weight:bold;">Copy Count: </span>
                    <%=book.copyCount%>
                </p>
                <p><span style="font-weight:bold;">Grade Level: </span>
                    <%=book.gradeLevel%>
                </p>
                <p><span style="font-weight:bold;">Category: </span>
                    <%=book.category%>
                </p>
                <p><span style="font-weight:bold;">Lexile: </span>
                    <%=book.lexile%>
                </p>
            </div>
            
        </div>


        
        

        <!-- can you hide this lol -->
        <h1 class="Check-out" style="padding-top: 50px;">Checkout:</h1>
            <form action="/books" method="post">

                <label class="label" for="check-out-name">Name</label><br>
                <input class ="nameinfo" type="text" id="fname" name="fullname" placeholder="Enter your name"><br><br>

                <label class="label" for="check-out-number">Phone Number :</label><br>
                <input class ="phoneinfo"vtype="number" id="c-number" name="phonenumber" placeholder="Enter a phone number">

                <input type="number" name="isbnVal" value="<%=book.isbn%>" style="display:none">
                <div class="book-name">
                    <button href="#" class="recipe-btn"
                        style="display:flex; justify-content: center; align-items: center;">Checkout
                        Book</button>
                </div>
            </form>



            <form action="/books" method="get">
                <button class="recipe-btn"
                    style="display:flex; justify-content: center; align-items: center;"> Back to
                    Books</button>
            </form>
            <!-- until here -->


    </div>



    <script>

      


        // const searchBtn = document.getElementById('search-btn');
        const mealList = document.getElementById('book');
        const mealDetailsContent = document.querySelector('.book-details-content');
        const recipeCloseBtn = document.getElementById('recipe-close-btn');

        // event listeners
        // searchBtn.addEventListener('click', getMealList);
        mealList.addEventListener('click', mealRecipeModal);
        recipeCloseBtn.addEventListener('click', () => {
            mealDetailsContent.parentElement.classList.remove('showRecipe');
        });
        function mealRecipeModal(meal) {
            console.log(meal);
            meal = meal[0];
            let html = `
    <h1 class="Check-out">Checkout:</h2>
        <h2 class="recipe-title">The Hungry Caterpillar</h2>
        <form>
            <label for="check-out-name">Name:</label><br>
            <input type="text" id="fname" name="name" placeholder="Enter a name"><br>
            <label for="check-out-address">Aparment:</label><br>
            <input type="text" id="c-address" name="address" placeholder="Enter an address"><br>
            <label for="check-out-number">Phone Number:</label><br>
            <input type="text" id="c-number" name="address" placeholder="Enter an address">
        </form>


        `;
            mealDetailsContent.innerHTML = html;
            mealDetailsContent.parentElement.classList.add('showRecipe');
        }


    </script>

</body>

</html>